<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Translation Tool</display-name>
    <description>
      Tibetan To English Translation Tool
    </description>

    <!-- Define servlets that are included in the example application -->

    <servlet>
        <servlet-name>OnLineScannerFilter</servlet-name>
        <servlet-class>org.thdl.tib.scanner.OnLineScannerFilter</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RemoteScannerFilter</servlet-name>
        <servlet-class>org.thdl.tib.scanner.RemoteScannerFilter</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>HelloServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DisplayFileInfo</servlet-name>
        <servlet-class>org.thdl.util.DisplayFileInfo</servlet-class>
    </servlet>    

    <servlet-mapping>
        <servlet-name>OnLineScannerFilter</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OnLineScannerFilter</servlet-name>
        <url-pattern>/org.thdl.tib.scanner.OnLineScannerFilter</url-pattern>
    </servlet-mapping>
	
    <servlet-mapping>
        <servlet-name>RemoteScannerFilter</servlet-name>
        <url-pattern>/org.thdl.tib.scanner.RemoteScannerFilter</url-pattern>
    </servlet-mapping>    
</web-app>